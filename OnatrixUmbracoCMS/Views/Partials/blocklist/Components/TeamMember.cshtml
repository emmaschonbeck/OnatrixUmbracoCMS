@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.TeamMember)Model.Content;
}

<div class="team-member">
    @if (content.TeamMemberImage != null)
    {
        <img src="@content.TeamMemberImage.Url()" alt="@content.TeamMemberName" />
    }
    <div class="team-info">
        <h4>@content.TeamMemberName</h4>
        <p>@content.TeamMemberRole</p>
    </div>
</div>

