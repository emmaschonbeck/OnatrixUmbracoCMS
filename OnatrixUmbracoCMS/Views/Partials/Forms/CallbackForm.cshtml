@using CmsWin._24.ViewModels
@model CallbackFormViewModel

@using (Html.BeginUmbracoForm("HandleCallbackForm", "Form", FormMethod.Post, new {novalidate = "novalidate", id = "callbackForm"}))
{
    <div class="callback-form">

        <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" type="text" placeholder="@Html.DisplayNameFor(x => x.Name)" class="form-input" />
            <span asp-validation-for="Name" class="form-error"></span>
        </div>

        <div>
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" type="text" placeholder="@Html.DisplayNameFor(x => x.Email)" class="form-input" />
            <span asp-validation-for="Email" class="form-error"></span>
        </div>

        <div>
            <label asp-for="Phone" class="form-label"></label>
            <input asp-for="Phone" type="text" placeholder="@Html.DisplayNameFor(x => x.Phone)" class="form-input" />
            <span asp-validation-for="Phone" class="form-error"></span>
        </div>

        <div>
            <label asp-for="SelectedOption" class="form-label"></label>

            <div class="form-group">
                <div class="select-wrapper">
                    <select asp-for="SelectedOption" class="form-select">
                        <option value="" disabled hidden selected>Please select an option</option>
                        <option value="Financial consulting">Financial consulting</option>
                        <option value="Business advice">Business advice</option>
                        <option value="Tax planning">Tax planning</option>
                    </select>

                    <span class="select-arrow">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none"
                            viewBox="0 0 24 24" stroke="#555" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                        </svg>
                    </span>

                </div>
                <span asp-validation-for="SelectedOption" class="form-error"></span>
            </div>
        </div>

        <div>
            <button type ="Submit" class="callback-form-btn">Submit</button>
        </div>


    </div>
}